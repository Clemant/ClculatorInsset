<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
         xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:menu="urn:import:org.insset.client.menu">

<g:HTMLPanel>
    <menu:Menu ui:field="menu"/>
    <h1>Projet de mise en pratique Scrum</h1>      <!--Affichage des deux premières zones de textes ainsi que des boutons clear et validé-->  
    <div class="bs-section">
        <g:FlowPanel>
            <g:FlowPanel>
                <g:Label>Quelle est le montant de départ pour calculer la remise ?</g:Label>
            </g:FlowPanel>
            <g:FlowPanel>          
              <g:TextBox ui:field="valR" text="Entrer une valeur"/>        <!-- ValR = zone de texte du montant initial qui va subir une remise-->
            </g:FlowPanel>
            <g:FlowPanel>
                <g:Label>Quelle est le pourcentage pour calculer la remise ?</g:Label>
            </g:FlowPanel>
            <g:FlowPanel>          
              <g:TextBox ui:field="valE" text="Entrer une valeur"/>        <!-- ValR = zone de texte du pourcentage qui va s'appliqué au montant initial ValR-->
              <g:SubmitButton ui:field="boutonConvertRToA" text="OK"/>
            </g:FlowPanel>
            <g:FlowPanel>
                <g:Label ui:field="errorLabelRToA" ></g:Label>           <!--Message d'erreur pour la première situation-->
            </g:FlowPanel>
            <g:FlowPanel >
            
                <g:ResetButton ui:field="boutonClearR" text="Clear"/>    <!-- Bouton clear de la zone de texte ValR et ValE-->
            </g:FlowPanel>
        </g:FlowPanel>
        <g:FlowPanel>
        </g:FlowPanel>                   <!--Affichage des 3éme et 4éme zones de textes ainsi que des boutons clear et validé--> 
        <g:FlowPanel>
            <g:FlowPanel>
                <g:Label>Quelle est le montant de départ qui a subit une remise ?</g:Label>
            </g:FlowPanel>
            <g:FlowPanel>          
              <g:TextBox ui:field="valA" text="Entrer une valeur"/>        <!-- ValA = zone de texte du montant qui a subit une remise-->
            </g:FlowPanel>
            <g:FlowPanel>
                <g:Label>Quelle est le pourcentage appliqué à ce montant ?</g:Label>
            </g:FlowPanel>
            <g:FlowPanel>          
              <g:TextBox ui:field="valF" text="Entrer une valeur"/>        <!-- ValR = zone de texte du pourcentage qui a été appliqué au montant ValA-->
              <g:SubmitButton ui:field="boutonConvertRToA" text="OK"/>     <!-- Bouton relié à la fonction pour connaître un montant avant remise-->
            </g:FlowPanel>
            <g:FlowPanel>
                <g:Label ui:field="errorLabelAToR" ></g:Label>           <!--Message d'erreur pour la deuxième situation-->
            </g:FlowPanel>
            <g:FlowPanel>
                
                <g:ResetButton ui:field="boutonClearA" text="Clear"/>    <!-- Bouton clear de la zone de texte ValA et ValF-->
            </g:FlowPanel>
        </g:FlowPanel>
        <g:FlowPanel>
        </g:FlowPanel>

      <!--</g:Form>-->
    </div>
    <!-- E. Container Right -->

  </g:HTMLPanel>
</ui:UiBinder>